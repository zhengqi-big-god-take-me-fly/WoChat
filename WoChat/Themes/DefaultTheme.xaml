<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WoChat.Themes">
    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Light">
            <Color x:Key="SystemAccentColor">#C2BD8E</Color>
            <Color x:Key="SystemColorButtonTextColor">#646555</Color>
            <Color x:Key="SystemColorButtonFaceColor">#C2BD8E</Color>
            <Color x:Key="SystemListAccentHighColor">#C2BD8E</Color>
            <ImageBrush x:Key="ApplicationPageBackgroundThemeBrush" Stretch="UniformToFill" ImageSource="ms-appx:///Assets/DefaultBackground.jpg"/>
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>
</ResourceDictionary>
